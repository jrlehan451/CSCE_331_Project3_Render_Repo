<!DOCTYPE html>
<head>
    <title>Add Drink</title>
    <link rel="stylesheet" href="/css/drink_options.css">
</head>
<body>
    <div class="columnWrapper">
        <button onClick="backFromAddDrink()">Back</button>
        <h1>Add Drink</h1>
    </div>
    <div class="columnWrapper">
        <div class="column bodyColumn">
            <div class="button-container">
                <% for (var i in drinks) {%>
                    <button onClick="drinkToLocal('<%=drinks[i].drink_id%>', '<%=drinks[i].name%>', '<%=drinks[i].cost%>')"><%=capitalizeName(drinks[i].name, ' ')%></button>
                <% } %>
            </div>
        </div>
        <div class="column bodyColumn">
            <table>
                <tbody id="tbody"></tbody>
            </table>
            <div class="columnWrapper">
                <button onClick="toAddOns()">Add-Ons</button>
                <button onClick="toOrderSummaryFromAddDrink()">Checkout</button>
            </div>
        </div>
    </div>
</body>

<script src="/js/functions.js"></script>