<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu</title>
    <link rel="stylesheet" href="/css/index.css"> 
</head>
<body>
    <div class="menu-title">
        <h1>Menu</h1>
    </div>

    <button class="home-button" onclick="returnHome()">Home</button>

    <div class = "drink-panel">
        <% for (const category in drinksByCategory) {%>
            <h2> <%= category %> </h2>

            <ul>
                <% drinksByCategory[category].forEach(drink => { %>
                    <li>
                        <button onclick="navigateToMenuAddons()">
                            <%= drink.name %>
                        </button>
                    </li>
                <% }); %>
            </ul>
        <% } %>
    </div>

</body>
</html>